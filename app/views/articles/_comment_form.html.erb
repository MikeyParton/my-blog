<h3>Post a Comment</h3>

<%= form_for [ @article, @comment ] do |f| %>

	<%= f.label :author, "Name" %>
	<%= f.text_field :author, class: "form-control" %>

	<%= f.label :body, "Comment" %>
	<%= f.text_area :body, class: "form-control" %>

	<%= f.submit "Submit", class: "btn btn-primary" %> 

<% end %>